package com.example.db.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.db.entities.BottelEntity;
import com.example.db.entities.ChairsEntity;
import com.example.db.repository.ChairRepository;

@RestController
public class ChairController {

	@Autowired
	ChairRepository chairRepository;

	String name = "wheelChair";
	Double price = 985.00;

	@PostMapping("saveChair/{number}")
	public String saveChairByNumber(@PathVariable Integer number) {
		System.out.println("inside chair by number");
		ChairsEntity chairsEntity;
		int i = 1;
		do {
			chairsEntity = new ChairsEntity(i, name, price);
			chairRepository.save(chairsEntity);
//			System.out.println(i + " == 28");
			i++;
//			System.out.println(i + " == 30");

		} while (1 <= number);

//		int i = 1;
//		do {
//			chairsEntity = new ChairsEntity(i, name, price);
//			chairRepository.save(chairsEntity);
//			i++;
//		} while (i <= number);

		return "saved records --" + chairsEntity;
	}

}
